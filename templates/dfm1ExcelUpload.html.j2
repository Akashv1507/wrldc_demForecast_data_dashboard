{% extends "layoutBase.html.j2" %}
{% block title %} Upload Excel Forecast{% endblock %}

{% block head %}
{{ super() }}
{% endblock %}

{% block content %}
<h1>Upload Forecast Excel</h1>

<form  class="mt-5" method="post" id="myForm" enctype="multipart/form-data" name="myForm"  onsubmit="return validateForm()">
  <div class="form-row mt-5">
    <div class="form-group col-md-3 file-input">
      <label for="excleFile" class ="new-button">Choose File</label>
      <input class="form-control-file file" type= "file" id="excleFile" name="excleFile">
      <p class="file-name"></p>
    </div>
    <div class="form-group col-md-3">
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="modelName" id="dfm1" value="dfm1" checked>
          <label class="form-check-label" for="dfm1">DFM1</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="modelName" id="dfm2" value="dfm2" >
          <label class="form-check-label" for="dfm2">DFM2</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="modelName" id="dfm3" value="dfm3" >
          <label class="form-check-label" for="dfm3">DFM3</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="modelName" id="dfm4" value="dfm4">
          <label class="form-check-label" for="dfm4">DFM4</label>
        </div>
    </div>
  </div>
  <button type="submit" class="btn btn-primary btn-lg mt-5">Upload</button>
</form>
<div id="errorDiv" class="mt-4 text-lg" style="color:rgb(139,0,0);" ></div>

{% if method == 'POST' %}
<div id='resDiv' class="mt-3 text-lg" style="color:#2e59d9;" >
    <b>{{respMsg}}</b>
</div>
{% endif %}

{% endblock %}


{% block scripts %}
    <script src="{{ url_for('static', filename='excelFileUpload/index.js') }}"></script>
    
{% endblock %}