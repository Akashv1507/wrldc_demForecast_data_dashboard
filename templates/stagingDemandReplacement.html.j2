{% extends "layoutBase.html.j2" %}
{% block title %}Demand Replacement{% endblock %}

{% block head %}
{{ super() }}
{% endblock %}

{% block content %}
<h2>Demand Replacement In Staging Table - Target Date to be Replaced by Source Date</h2>

<form method="post" id="myForm" onsubmit="return validateForm()" name="myForm" class="mt-5">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="targetDate">Target Date</label>
      <input type="date" class="form-control" name = "targetDate" id="targetDate">
    </div>
    <div class="form-group col-md-6">
      <label for="sourceDate"> Source Date</label>
      <input type="date" name = "sourceDate" class="form-control" id="sourceDate">
    </div>
 </div>
 <div class="form-group col-md-4">
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="demandOptions" id="minMinRamp" value="minMinRamp" checked>
        <label class="form-check-label" for="minMinRamp">Method 1(Min-Min Ramp)</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="demandOptions" id="rollingMedian" value="rollingMedian">
        <label class="form-check-label" for="rollingMedian">Mehtod 2(Rolling Median)</label>
      </div>
  </div>
  <button type="submit" class="btn btn-primary">Replace</button>
</form>
<div id="errorDiv" class="mt-4 text-lg" style="color:rgb(139,0,0);" ></div>

{% if method == 'POST' %}
{% if respMsg %}
<div id='resDiv' class="mt-3 text-lg" style="color:#2e59d9;" >
    <b>{{respMsg}}</b>
</div>
{% else %}
<div class="alert alert-danger mt-5" >
  <strong>Something went wrong</strong> Demand Data Replacement Unsuccessfull
</div>
{% endif %}
{% endif %}

{% endblock %}


{% block scripts %}
    <script src="{{ url_for('static', filename='stagingDemandReplacement/index.js') }}"></script>
    
{% endblock %}